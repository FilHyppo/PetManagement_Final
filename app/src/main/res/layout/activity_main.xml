<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Log in"
              android:textColor="@color/white"
              android:textSize="35sp"
              android:gravity="center"
              android:textStyle="bold"
              android:id="@+id/logIn"
              android:layout_marginTop="50sp" android:layout_marginStart="50sp" android:layout_marginEnd="50sp"
              android:layout_marginBottom="50sp"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/username"
              android:autofillHints="emailAddress"
              android:inputType="textEmailAddress"
              android:layout_below="@id/logIn"
              android:background="#30ffffff"
              android:hint="Username"
              android:textColorHint="@color/white"
              android:textColor="@color/white"
              android:padding="20sp"
              android:drawableLeft="@drawable/user_icon"
              android:drawablePadding="20sp"
              android:layout_marginTop="10sp" android:layout_marginStart="10sp" android:layout_marginEnd="10sp"
              android:layout_marginBottom="10sp"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/password"
              android:layout_below="@id/username"
              android:background="#30ffffff"
              android:hint="Password"
              android:autofillHints="password"
              android:textColorHint="@color/white"
              android:textColor="@color/white"
              android:padding="20sp"
              android:drawableLeft="@drawable/lock_icon"
              android:drawablePadding="20sp"
              android:inputType="textPassword"
              android:layout_marginTop="10sp" android:layout_marginStart="10sp" android:layout_marginEnd="10sp"
              android:layout_marginBottom="10sp"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/loginBtn"
            android:layout_below="@+id/password"
            android:text="LOGIN"
            android:backgroundTint="#2196F3"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp" android:layout_marginStart="20sp" android:layout_marginEnd="20sp"
            android:layout_marginBottom="20sp"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/forgotpasswordBtn"
            android:layout_below="@+id/loginBtn"
            android:text="Forgot Password?"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/fucsia"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp" android:layout_marginEnd="20sp" android:layout_marginStart="20sp"
            android:layout_marginBottom="20sp"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/signinBtn"
            android:layout_below="@+id/forgotpasswordBtn"
            android:text="Sign In"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="20sp" android:layout_marginStart="20sp" android:layout_marginEnd="20sp"
            android:layout_marginBottom="20sp" app:backgroundTint="@color/fucsia"/>
</RelativeLayout>